{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "module": "CommonJS",
    "importHelpers": false,
    "moduleResolution": "node",
    "declaration": false,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.js",
    "polyfills.d.ts"
  ]
}
